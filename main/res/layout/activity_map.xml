<?xml version="1.0" encoding="utf-8"?>
<!-- 地图页面 MapActivity 布局 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_map_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="always"
    android:padding="0dp"
    android:splitMotionEvents="true" >

    <com.macrowen.macromap.MacroMap
        android:id="@+id/acntivity_map_layout_macromap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:tag="acntivity_map_layout_macromap_tag" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/acntivity_map_button_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/shop_detail_margin"
            android:button="@drawable/position_button_bg_selector"
            android:background="@null"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:tag="acntivity_map_button_position_tag"
            android:textOff=""
            android:textOn="" />

        <TextView
            android:id="@+id/path"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/acntivity_map_button_zoomout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/shop_detail_margin"
            android:background="@android:color/transparent"
            android:src="@drawable/zoom_out_button_bg_selector"
            android:tag="acntivity_map_button_zoomout_tag" />

        <ImageButton
            android:id="@+id/acntivity_map_button_zoomin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/shop_detail_margin"
            android:background="@android:color/transparent"
            android:src="@drawable/zoom_in_button_bg_selector"
            android:tag="acntivity_map_button_zoomin_tag" />
    </LinearLayout>

</RelativeLayout>