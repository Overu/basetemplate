<?xml version="1.0" encoding="utf-8"?>
<!-- 启动页面 LaunchActivity 布局 -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@drawable/activity_home_title_layout_bg_bitmap" >
    
    <ImageButton
        android:id="@+id/activity_home_title_layout_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/icon_back"
        android:paddingRight="30dp"
        android:visibility="invisible"
        android:tag="activity_home_title_layout_btn_back_tag" />

    <TextView
        android:id="@+id/activity_home_title_layout_textview"
        android:tag="activity_home_title_layout_textview_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="26sp" />
    
    <ImageButton
        android:id="@+id/acitivity_home_title_layout_btn_about"
        android:tag="acitivity_home_title_layout_btn_about_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/activity_home_title_layout_textview"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:visibility="invisible"
        android:background="@drawable/activity_home_title_layout_btn_about"
        android:gravity="center" />
</RelativeLayout>